test_that("Install libs", {
  libs <- c("Rcpp", "RUnit")
  InstallLibs(libs)
  for (lib in libs)
    expect_true(lib %in% installed.packages()[, 1])
})

test_that("Install then not load libs", {
  libs <- c("Rcpp", "dplyr")
  InstallLibs(libs, load = FALSE)
  for (lib in libs) {
    expect_true(lib %in% installed.packages()[, 1])
    expect_false(lib %in% loaded_packages()[, 1])
  }
})

test_that("Install and loads libs", {
  libs <- c("Rcpp", "dplyr")
  InstallLibs(libs, load = TRUE)
  for (lib in libs) {
    expect_true(lib %in% installed.packages()[, 1])
    expect_true(lib %in% loaded_packages()[, 1])
  }
})


